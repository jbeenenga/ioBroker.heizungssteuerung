{
	"i18n": true,
	"type": "tabs",
	"tabsStyle": {
		"width": "calc(100% - 100px)"
	},
	"items": {
		"main": {
			"type": "panel",
			"label": "MainSettings",
			"items": {
				"isHeatingMode": {
					"type": "select",
					"label": "HeatingMode",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"options": [
						{
							"label": "Heating",
							"value": 0
						},
						{
							"label": "Cooling",
							"value": 1
						}
					]
				},
				"stopCoolingIfHumIsHigherThan": {
					"newLine": true,
					"type": "number",
					"label": "StopCoolingIfHumIsHigherThan",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"updateIntervall": {
					"type": "number",
					"label": "UpdateIntervall",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"defaultTemperature": {
					"type": "number",
					"label": "DefaultTemperature",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"boostIntervall": {
					"type": "number",
					"label": "BoostIntervall",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"pauseIntervall": {
					"type": "number",
					"label": "PauseIntervall",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"startStopDifference": {
					"type": "number",
					"label": "StartStopDifference",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"resetTemperaturesOnStart": {
					"type": "checkbox",
					"label": "ResetTemperaturesOnStart",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"enableWeatherControl": {
					"type": "checkbox",
					"label": "EnableWeatherControl",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"default": false
				},
				"weatherStatePath": {
					"type": "text",
					"label": "WeatherStatePath",
					"xs": 12,
					"sm": 12,
					"md": 12,
					"lg": 12,
					"xl": 12,
					"hidden": "!data.enableWeatherControl"
				},
				"heatingOutsideTemperatureThreshold": {
					"type": "number",
					"label": "HeatingOutsideTemperatureThreshold",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"default": 15,
					"hidden": "!data.enableWeatherControl"
				},
				"coolingOutsideTemperatureThreshold": {
					"type": "number",
					"label": "CoolingOutsideTemperatureThreshold",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"default": 24,
					"hidden": "!data.enableWeatherControl"
				}
			}
		},
		"periods": {
			"type": "panel",
			"label": "Periods",
			"items": {
				"periods": {
					"type": "table",
					"xs": 12,
					"sm": 12,
					"md": 12,
					"lg": 12,
					"xl": 12,
					"label": "Periods",
					"items": [
						{
							"type": "room",
							"attr": "room",
							"title": "Room",
							"filter": true,
							"sort": true,
							"width": "30%",
							"default": ""
						},
						{
							"type": "panel",
							"title": "Days",
							"width": "40%",
							"items": [
								{
									"type": "checkbox",
									"attr": "Monday",
									"label": "Monday",
									"filter": false,
									"sort": false,
									"default": false
								},
								{
									"type": "checkbox",
									"attr": "Tuesday",
									"label": "Tuesday",
									"filter": false,
									"sort": false,
									"default": false
								},
								{
									"type": "checkbox",
									"attr": "Wednesday",
									"label": "Wednesday",
									"filter": false,
									"sort": false,
									"default": false
								},
								{
									"type": "checkbox",
									"attr": "Thursday",
									"label": "Thursday",
									"filter": false,
									"sort": false,
									"default": false
								},
								{
									"type": "checkbox",
									"attr": "Friday",
									"label": "Friday",
									"filter": false,
									"sort": false,
									"default": false
								},
								{
									"type": "checkbox",
									"attr": "Saturday",
									"label": "Saturday",
									"filter": false,
									"sort": false,
									"default": false
								},
								{
									"type": "checkbox",
									"attr": "Sunday",
									"label": "Sunday",
									"filter": false,
									"sort": false,
									"default": false
								}
							]
						},
						{
							"type": "text",
							"attr": "from",
							"width": "20%",
							"title": "From",
							"filter": false,
							"sort": true,
							"default": "10:00"
						},
						{
							"type": "text",
							"attr": "until",
							"width": "20%",
							"title": "Until",
							"filter": false,
							"sort": true,
							"default": "18:00"
						},
						{
							"type": "checkbox",
							"attr": "heating",
							"width": "20%",
							"title": "Heating",
							"filter": false,
							"sort": false,
							"default": true
						},
						{
							"type": "text",
							"attr": "temp",
							"width": "20%",
							"title": "Temperature",
							"filter": false,
							"sort": false,
							"default": "18"
						}
					]
				}
			}
		},
		"ai": {
			"type": "panel",
			"label": "AI Settings",
			"items": {
				"_aiInfo": {
					"type": "staticText",
					"text": "Enable AI-based predictive heating control. The AI learns the thermal characteristics of each room (heating rate, thermal inertia, overshoot) and optimizes valve control to prevent overshooting the target temperature.",
					"xs": 12,
					"sm": 12,
					"md": 12,
					"lg": 12,
					"xl": 12
				},
				"enableAI": {
					"type": "checkbox",
					"label": "Enable AI Control",
					"help": "Enable AI-based temperature control with machine learning",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"aiModelPath": {
					"type": "text",
					"label": "AI Model Path",
					"help": "Directory path where AI models are saved (leave empty for default)",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"hidden": "!data.enableAI"
				},
				"aiConfidenceThreshold": {
					"type": "slider",
					"label": "AI Confidence Threshold",
					"help": "Minimum confidence (0-1) required to use AI predictions. Lower = more aggressive AI usage",
					"min": 0.1,
					"max": 1.0,
					"step": 0.05,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"hidden": "!data.enableAI"
				},
				"aiMinTrainingData": {
					"newLine": true,
					"type": "number",
					"label": "Minimum Training Data",
					"help": "Minimum number of heating cycles before AI starts controlling (recommended: 20-50)",
					"min": 5,
					"max": 100,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"hidden": "!data.enableAI"
				},
				"aiTrainingEpochs": {
					"type": "number",
					"label": "Training Epochs",
					"help": "Number of training iterations for the neural network (default: 50)",
					"min": 10,
					"max": 200,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"hidden": "!data.enableAI"
				},
				"aiLearningRate": {
					"type": "number",
					"label": "Learning Rate",
					"help": "Learning rate for the neural network (default: 0.001)",
					"min": 0.0001,
					"max": 0.01,
					"step": 0.0001,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"hidden": "!data.enableAI"
				},
				"aiAutoRetrain": {
					"newLine": true,
					"type": "checkbox",
					"label": "Auto Retrain",
					"help": "Automatically retrain AI models periodically with new data",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"hidden": "!data.enableAI"
				},
				"aiRetrainInterval": {
					"type": "number",
					"label": "Retrain Interval (hours)",
					"help": "How often to retrain models with new data (default: 24 hours)",
					"min": 1,
					"max": 168,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4,
					"hidden": "!data.enableAI || !data.aiAutoRetrain"
				}
			}
		}
	}
}